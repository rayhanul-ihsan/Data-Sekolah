{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./*"],
      "@src/*": ["src/*"]
    },
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "App.tsx",
    "declarations.d.ts"
  ],
  "exclude": ["node_modules"],
  // "include": ["declarations.d.ts"],
  // "exclude": ["node_modules", "dist"]

}

